<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#141931"
    android:layout_height="match_parent"
    tools:context=".CinemaDetailActivity">

    <ImageView
        android:layout_width="16dp"
        android:src="@mipmap/back"
        android:id="@+id/iv_back"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_height="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="影院详情"
        android:layout_marginTop="8dp"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_marginLeft="180dp"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="24dp"
        android:layout_height="40dp">
        <TextView
            android:layout_width="250dp"
            android:textColor="#ffffff"
            android:layout_marginTop="-15dp"
            android:textSize="14sp"
            android:id="@+id/tv_movieName"
            android:text="保利国际影城(龙旗广场店)"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:button="@null"
            android:layout_alignRight="@id/tv_movieName"
            android:id="@+id/cb_aixin"
            android:drawableTop="@drawable/aixin"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="112dp"
        android:layout_height="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#FFC107"
            android:gravity="center"
            android:id="@+id/tv_type1"
            android:text="3D眼睛"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#FFC107"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#FFC107"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="13dp"
            android:layout_marginLeft="46dp"
            android:background="@mipmap/zhizhen"
            android:layout_height="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="到这里去"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.androidkun.xtablayout.XTabLayout
        android:layout_width="match_parent"
        android:layout_marginTop="161dp"
        app:xTabTextColor="#fff"
        android:background="#1B2545"
        android:id="@+id/xtab_layout"
        android:layout_height="38dp"/>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_marginTop="200dp"
        android:id="@+id/vp"
        android:layout_height="match_parent"/>
    <TextView
        android:layout_width="match_parent"
        android:textColor="#ffffff"
        android:id="@+id/tv_showPaiXi"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="查看该影院电影排期"
        android:background="#e8185e"
        android:layout_height="40dp"/>
</RelativeLayout>